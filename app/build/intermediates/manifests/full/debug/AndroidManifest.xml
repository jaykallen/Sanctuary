<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaykallen.sanctuary"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.jaykallen.sanctuary.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jaykallen.sanctuary.AddApptActivity"
            android:parentActivityName="com.jaykallen.sanctuary.MainActivity" >
        </activity>
        <activity
            android:name="com.jaykallen.sanctuary.ApptActivity"
            android:parentActivityName="com.jaykallen.sanctuary.MainActivity" >
        </activity>
    </application>

</manifest>